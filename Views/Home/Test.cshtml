@{
}
@model List<Activity>

<table color="#000080" class="table table-bordered">
    <thead color="#000080" class="fw-bold">
        <tr>
            <td>Task Name</td>
            <td>Category</td>
            <td>Quadrant</td>
            <td>Due Date</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                <td>@x.ActivityDescription</td>
                <td>@x.Category?.CategoryName</td>
                <td>@x.Quadrant</td>
                <td>@x.DueDate</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.ActivityId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.ActivityId">Delete</a></td>

            </tr>
        </tbody>
    }
</table>