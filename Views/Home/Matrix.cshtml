@model IEnumerable<Mission_8.Models.Activity>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stephen Covey's Time Management Matrix</title>
    <link href="~/css/mystyles.css" rel="stylesheet" />
    <style>
        .Home {
            color: #E35031; /* Soft Red */
        }

        .Work {
            color: #7851A9; /* Lavender */
        }

        .School {
            color: #FF8C00; /* Soft Orange */
        }

        .Church {
            color: #007FFF; /* Light Blue */
        }
    </style>
