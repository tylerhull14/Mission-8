<body>
    <div class="container matrix">  
        <div style="text-align: center" class="row header">
            Stephen Covey Matrix
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-5">URGENT</div>
            <div class="col-5">NOT URGENT</div>
        </div>
        <div class="row">
            <div class="col-2">IMPORTANT</div>
            <div class="col-5 quadrant">
                @foreach (var t in Model)
                {
                    @if (t.Quadrant == 1 && t.Completed == 0)
                    {
                        <li>@t.ActivityDescription</li>
                    }
                }
            </div>
            <div class="col-5 quadrant">
                @foreach (var t in Model)
                {
                    @if (t.Quadrant == 2 && t.Completed == 0)
                    {
                        <li>@t.ActivityDescription</li>
                    }
                }
            </div>
        </div>
        <div class="row">
            <div class="col-2">NOT IMPORTANT</div>
            <div class="col-5 quadrant">
                @foreach (var t in Model)
                {
                    @if (t.Quadrant == 3 && t.Completed == 0)
                    {
                        <li>@t.ActivityDescription</li>
                    }
                }
            </div>
            <div class="col-5 quadrant">
                @foreach (var t in Model)
                {
                    @if (t.Quadrant == 4 && t.Completed == 0)
                    {
                        <li>@t.ActivityDescription</li>
                    }
                }
            </div>
        </div>
    </div>
</body>